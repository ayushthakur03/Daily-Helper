<html>
      <head>
          <title> TO-DO APP  </title>
          <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
          <link href=
'https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/ui-lightness/jquery-ui.css'
          rel='stylesheet'>
      
    <script src=
"https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js" >
    </script>
      
    <script src=
"https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js" >
    </script>
          <link rel="stylesheet" href="\css\main.css">


      </head>

      <body>

        <h2 id="heading-title"> TODO APP </h2>

        <form action="/create" method="POST">
          <div id="form-container">
            <div id="description">
              <p class="heading">Description:</p>

              <!-- Input field for tasks -->
            <input id="task-container" type="text" name="task" placeholder="Enter the task" required>
            </div>
            <div style="display: flex; margin-top: 2vh;">

              <!-- Dropdown -->
            <div id="dropdown">
            <select id="options-bar" name="category" class="form-select" aria-label="Default select example">
              <option selected>Open this select menu</option>
              <option name="optionn" value="Normal">Normal</option>
              <option name="optionn"  value="21 days">21 days</option>
              <option name="optionn"  value="100 days of code">100 days of code</option>
            </select>
            </div>
            
             <input type="date" id="my_date_picker" placeholder="Enter Date" name="datepicker">
            </div>
   
          
            </div>
            <div id="button-section">
              <!-- Submit Button -->
            <button id="add-btn" type="submit">Add task</button>
          </form>
          <!-- <form action="/del-contact" method="POST"> -->
            <!-- Delete button -->
            <button id="del-btn">Delete Task</button>
            
            
            
            </div>
            
            
      
          <!-- Output field -->

        <div id="display">
          <h2 style="text-align: center;">Your Tasks</h2>
            <%for(let i of tasklist){ %>
             
            
            <div class="task-details">
              
              <p> <%=i.task %>  </p>
              <div style="display: flex;">
                <input class="my-checkbox" type="checkbox" name="delc" value="<%= i.id %>" >
              <i class="far fa-calendar-alt date-margin"></i> <span class="date-margin"><%=i.date %></span> 
               
                <% if(i.mode=="Normal"){ %>
                  <p class="violet" style="margin-left: 7%;"> <%=i.mode %>  </p>
               <%} 
               else if(i.mode=="21 days"){ %>
                <p class="cyan" style="margin-left: 7%;"> <%=i.mode %>  </p>
             <%} 
            else{ %>
              <p class="yellow" style="margin-left: 7%;"> <%=i.mode %>  </p>
           <%} 
               
               
               
               
               %>
                
              </div>
              
              
              
            </div>

          <%} %>
         
   
        </div>
      <!-- </form> -->
     
      <script src="\js\index.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      </body>


</html>